        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="6"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="5dp"
        android:background="@color/colorPrimary">

        <!--One-->
